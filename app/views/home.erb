<!-- RECENT DECKS SECTION -->
<div class="container">
	<div class="row">
		<div class="col-md-6">
      <div class="col-md-12 content-box">
        <h3>Recent decks</h3>
        <br>
        <%@decks.each do |deck|%>
          <div class="container">
          <div class="row">
            <div class="col-md-4 mr-auto">
              <a href="/decks/<%=deck.slug%>"><h5><%="#{deck.name} "%></h5></a>
              <% deck.color_identity.each do |color| %>
                <img src="<%=color.values.first%>" width="15" alt="<%=color.keys.first%>">
              <%end%>
            </div>
            <div class="col-md-4 col-auto">
              <h5><%="#{deck.format.capitalize}"%></h5>
              <p><%="$#{deck.price}"%></p>
            </div>
          </div>
            <div class="col-md-6">
              <p><%="Created by #{deck.user.name}"%></p>
            </div>
          </div>
          <hr>
        <%end%>
      </div>
    </div>
<!-- RECENT COMMENTS -->
    <div class="col-md-6">
      <div class="col-md-12 content-box">
        <h3>Recent comments</h3>
          <%@comments.each do |comment|%>
            <div class="container">
              <p><%=comment.content%></p>
              <p><%="-#{comment.user.name} #{comment.created_at.localtime.pretty}"%></p>
            </div>
            <hr>
          <%end%>
      </div>
    </div>
	</div>
</div>