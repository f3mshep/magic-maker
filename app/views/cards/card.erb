<div class="container">
	<div class="row">
		<div class="col-md-12">
			<div class="row content-box">
			<div class="col-md-5">
				<img class="img-fluid" src="<%=@card.image_url%>">
			</div>
			<div class="col-md-5">
				<h3><%=@card.name%></h3>
				<h4>Type</h4>
				<h5><%=@card.card_type%></h5>
				<h4>Rules</h4>
				<h5><%=@card.rules%></h5>
				<h4>Flavor</h4>
				<h5><%= @card.flavor_text %></h5>
				<h4>Legalities</h4>
				<h5><%= @card.formats %></h5>
				<h4>Average Market Price</h4>
				<h5>$<%= @card.price %></h5>
			</div>
			</div>
		</div>
	</div>
</div>
