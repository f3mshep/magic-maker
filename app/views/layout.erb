<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 //EN">
<html>
  <head>
    <title>Magic Maker</title>
    <link rel="stylesheet" type="text/css" href="/stylesheets/bootstrap-material-design.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/custom.css">
		<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
		<script src="https://unpkg.com/popper.js@1.12.5/dist/umd/popper.js" integrity="sha384-KlVcf2tswD0JOTQnzU4uwqXcbAy57PvV48YUiLjqpk/MJ2wExQhg9tuozn5A1iVw" crossorigin="anonymous"></script>
		<script src="https://unpkg.com/bootstrap-material-design@4.0.0-beta.3/dist/js/bootstrap-material-design.js" integrity="sha384-hC7RwS0Uz+TOt6rNG8GX0xYCJ2EydZt1HeElNwQqW+3udRol4XwyBfISrNDgQcGA" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css?family=Roboto:100" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Lato:300" rel="stylesheet">
  </head>

  <body>
    <% if flash[:success] %>
      <div class="alert alert-success">
        <%= flash[:success] %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>    
      </div>
    <% end %>
    <% if flash[:error] %>
      <div class="alert alert-danger">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <%= flash[:error] %>
      </div>
    <% end %>
    <%if logged_in?%>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="/"> <img src="https://i.imgur.com/TOn9Mw5.png" width="40"> Magic Maker</a>
        
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item">
              <a class="nav-link" href="/home">Home <span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/cards/search">Card Search</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/decks/new">Build deck</a>
            </li>
          </ul>
          <ul class="navbar-nav col-auto">
            <li class="nav-item">
              <a class="nav-link" href="/<%=current_user.slug%>/decks">Your account</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href= "/logout" >Sign out</a>
            </li>
          </ul>
        </div>
      </nav>
      <br>
    <%else%>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="/"> <img src="https://i.imgur.com/TOn9Mw5.png" width="40"> Magic Maker</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">

          </ul>
          <form class="form-inline my-2 my-lg-0" method="post" action="/login">
            <input  type="text" placeholder="Account" name="username" class="form-control mr-sm-2">
            <input  class="form-control mr-sm-2" type="password" name="password" placeholder="Password">
            <button class="btn-material-second my-2 my-sm-0" type="submit">Login</button>
            <a class="btn-material my-2 my-sm-0" href="/signup">Register</a>
          </form>
        </div>
      </nav>
    <%end%>
    <%= yield %>
  </body>
</html>