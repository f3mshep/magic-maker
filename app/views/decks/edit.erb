<div class="container">
	<div class="row justify-content-center">
		<div class="col-md-10 content-box">
			<form action="/decks/<%= @deck.slug %>/edit" method="post">
				<div class="row justify-content-center">
					<div class="form-group col-md-10">
						<br>
						<h3>Deck info</h3>
						<br>
						<h4><%=@deck.name%></h4>
						<label>Deck Description</label>
						<textarea class="form-control visible-background" name="description" cols="30" rows="4"><%= @deck.description %></textarea>
						<br>
						<div class="row">
						<div class="col-md-6">
							<label for="">Main deck cards</label>
							<textarea class="form-control" name="cards" placeholder="Enter card names here. One card per line." name="" id="" cols="45" rows="10"><%=@deck.list_cards %></textarea>
						</div>
						<div class="col-md-6">
							<label for="">Sideboard cards</label>
							<textarea class="form-control" name="sideboard" placeholder="Enter sideboard card names here. One card per line." name="" id="" cols="46" rows="10"><%=@deck.sideboard.list_cards %></textarea>
						</div>
						</div>
							<div class="col-md-4">
								<br>
								<label for="">Format</label>
								<br>
								<select class="custom-select" name="format">
									<option <%='selected' if @deck.format.include?("casual")%> value="casual">Casual</option>
									<option <%='selected' if @deck.format.include?("standard")%> value="standard">Standard</option>
									<option <%='selected' if @deck.format.include?("modern")%> value="modern">Modern</option>
									<option <%='selected' if @deck.format.include?("legacy")%> value="legacy">Legacy</option>
									<option <%='selected' if @deck.format.include?("edh")%> value="edh">EDH</option>
								</select>
							</div>
							<br>
						<input type="submit" class="btn-material-second" value="Update deck">
						<a class="btn-material" href="/decks/<%=@deck.slug%>">Finish editing</a>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>