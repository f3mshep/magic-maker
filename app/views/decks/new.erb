<div class="container">
	<div class="row justify-content-center">
		<div class="col-md-10 content-box">
			<form action="/decks/new" method="post">
				<div class="row justify-content-center">
					<div class="form-group col-md-10">
						<br>
						<h3>Deck info</h3>
						<br>
						<label>Deck name</label>
						<input class="form-control" name="name" required placeholder="New deck" type="text">
						<label>Deck Description</label>
						<textarea class="form-control" name="description" placeholder="Enter a description of your deck" cols="30" rows="4"></textarea>
						<br>
						<div class="row">
						<div class="col-md-6">
							<label for="">Main deck cards</label>
							<textarea class="form-control" name="cards" placeholder="Enter card names here. One card per line." name="" id="" cols="45" rows="10"></textarea>
						</div>
						<div class="col-md-6">
							<label for="">Sideboard cards</label>
							<textarea class="form-control" name="sideboard" placeholder="Enter sideboard card names here. One card per line." name="" id="" cols="46" rows="10"></textarea>
						</div>
						</div>
							<div class="col-md-4">
								<br>
								<label for="">Format</label>
								<br>
								<select required class="custom-select" name="format">
									<option value="" disabled selected>Choose format</option>
									<option value="casual">Casual</option>
									<option value="standard">Standard</option>
									<option value="modern">Modern</option>
									<option value="legacy">Legacy</option>
									<option value="edh">EDH</option>
								</select>
							</div>
							<br>
						<input type="submit" class="btn-material-second" value="Create Deck">
					</div>
				</div>
			</form>
		</div>
	</div>
</div>